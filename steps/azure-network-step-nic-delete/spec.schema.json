{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "azure": {
        "type": "object",
        "description": "A mapping of Azure account configuration.",
        "properties": {
          "connection": {
            "type": "object",
            "x-relay-connectionType": "azure",
            "description": "A Relay Azure connection to use",
            "properties": {
              "subscriptionID": {
                "type": "string",
                "description": "Azure Subscription ID"
              },
              "clientID": {
                "type": "string",
                "description": "Azure Service Principal client ID"
              },
              "tenantID": {
                "type": "string",
                "description": "Azure Service Principal tenant ID"
              },
              "secret": {
                "type": "string",
                "description": "Azure Service Principal secret"
              }
            },
            "required": [
              "subscriptionID", 
              "clientID",
              "tenantID",
              "secret"
            ]
          }
        },
        "required": [
          "connection"
        ]
      },
      "resourceIDs": {
        "type": "array",
        "items":{
            "type":"string"
        },
        "description": "The list of resource IDs of the Azure Network Interfaces to be deleted"
      },
      "waitForDeletion":{
          "type":"boolean",
          "description": "Determines whether to wait for Network Interfaces to be deleted before continuing",
          "default":"false"
      }
    },
    "required": [
      "azure",
      "resourceIDs"
    ],
    "additionalProperties": false
} 